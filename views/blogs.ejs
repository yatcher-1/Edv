<%- include ("header.ejs")%>

<section id="banner">
    <div class="container">
        <div class="p-4 p-md-5 mt-lg-5 rounded text-body-emphasis border border-dark" style="border-radius: 50px!important; text-align: center;">
            <div>
                <h1 class="display-4 fst-italic text-capitalize">Blogs The Necessity</h1>
            </div>
        </div>
    </div>
</section>

    <section id="blogs-page-section">
        <div class="container">
            <div class="row" role="listbox">
                <%postsFound.forEach(function(post){%>
                <div class="col-md-3 p-3">
                    <div class="card">
                        <img src="/DIGITAL-1.webp" alt="...">
                        <div class="card-body">
                            <hr class="hr text-light position-relative" />
                            <h2><%=post.title%></h2>
                            <p class="card-text"><%-post.snippet%></p>
                            <a href="/Blogs/<%=post.slug%>" class="btn btn-outline-dark">Read More!</a>
                        </div>
                    </div>
                </div>
                <%});%>
            </div>
        </div>
    </section>

<%- include ("footer.ejs")%>