<script>
  // form script
  const scriptURL = 'https://script.google.com/macros/s/AKfycbzSeNqmbivcAlhSVQS82qUKHgbXesZlWjgnu8QFMW2k_DZbMBspGNOcRcinef9SC-D6/exec'
  const form = document.forms['submit-to-google-sheet4']
  const success = document.getElementById("success") 
  const modal = document.getElementById("staticBackdrop") 
  form.addEventListener('submit', e => {
    e.preventDefault()
    fetch(scriptURL, { method: 'POST', body: new FormData(form)})
      .then(response => {
        success.innerHTML = "Thanks for providing your query!";
        setTimeout(()=>{
          success.innerHTML = "";
        }, 5000)
        form.reset();
      })
      .catch(error => console.error('Error!', error.message))
  });
</script>

